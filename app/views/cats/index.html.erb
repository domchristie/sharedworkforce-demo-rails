<h2>Approved cats</h2>
<div>
  <% @cats.finished.each do |cat| %>
    <%= link_to cat do %>
      <%= image_tag(cat.cropped_image_url, :style=>'height: 50px;') %>
    <% end %>
  <% end %>
</div>

<h2>Pending cats</h2>
<div>
  <%= render :partial=>'cats', :locals=>{:cats=>@cats.pending} %>
</div>

<h2>Rejected cats</h2>
<div>
  <%= render :partial=>'cats', :locals=>{:cats=>@cats.rejected} %>
</div>